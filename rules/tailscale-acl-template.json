{
    "tagOwners": {
        "tag:bastion": ["your-tailscale-user@example.com"],
        "tag:workstation": ["your-tailscale-user@example.com"],
        "tag:code": ["your-tailscale-user@example.com"]
    },

    "acls": [
        {
            "action": "accept",
            "src": ["your-tailscale-user@example.com"],
            "dst": ["*:*"]
        },
        
        {
            "action": "accept",
            "src": ["tag:bastion"],
            "dst": ["tag:workstation:*", "tag:code:*"]
        },
        
        {
            "action": "accept",
            "src": ["your-tailscale-user@example.com"],
            "dst": ["tag:code:8443"]
        },
        
        {
            "action": "accept",
            "src": ["your-tailscale-user@example.com"],
            "dst": ["tag:workstation:3389,22"]
        }
    ],

    "ssh": [
        {
            "action": "accept",
            "src": ["your-tailscale-user@example.com"],
            "dst": ["tag:bastion", "tag:workstation", "tag:code"],
            "users": ["devmesh", "root", "humidor_brevity_80_icloud_com"]
        },
        
        {
            "action": "accept",
            "src": ["tag:bastion"],
            "dst": ["tag:workstation", "tag:code"],
            "users": ["devmesh", "root"]
        }
    ]
}
